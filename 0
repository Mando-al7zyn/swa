    <script>

        // إظهار محتوى الدعم عند التحميل الأولي (بدون Loader)

        document.getElementById('support-content').style.display = 'flex';



        function loadContent(pageId) {

            const loader = document.getElementById('content-loader');

            const contents = {

                'support': document.getElementById('support-content'),

                'home': document.getElementById('home-content'),

                'shop': document.getElementById('shop-content')

            };



            // 1. إخفاء جميع المحتويات الحالية

            Object.values(contents).forEach(content => {

                content.style.display = 'none';

            });

            

            // 2. إذا كانت الصفحة هي Home، نستخدم الـ Loader

            if (pageId === 'home') {

                loader.style.display = 'flex'; 

                setTimeout(() => {

                    loader.style.display = 'none'; 

                    contents[pageId].style.display = 'flex'; 

                }, 5000); 

            } 

            // 3. لأي صفحة أخرى (Support أو Shop) يتم الإظهار فوراً

            else {

                loader.style.display = 'none';

                contents[pageId].style.display = 'flex';

            }

        }

    </script>

</body>

</html> 
